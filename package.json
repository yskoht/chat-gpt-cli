{
	"name": "chat-gpt-cli",
	"version": "0.0.0",
	"license": "MIT",
	"bin": {
		"cgc": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"description": "Command line tool for ChatGPT",
	"author": "yskoht <ysk.oht@gmail.com> (https://github.com/yskoht)",
	"scripts": {
		"build": "tsc && tsc-alias",
		"build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
		"test": "prettier --check . && xo && ava",
		"lint": "eslint source --ext .ts,.tsx",
		"typecheck": "tsc --noEmit",
		"format": "prettier --write --config ./.prettierrc.cjs .",
		"_log": "bunyan -o short",
		"log": "npm run log:watch --file=$(ls chat-gpt-cli-*.log | sort | tail -n 1)",
		"log:watch": "tail -f $npm_config_file | npm run _log",
		"log:watch:help": "echo 'npm run log:watch --file=<file>'",
		"log:clean": "rm -f chat-gpt-cli-*.log",
		"prepare": "npm run build"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"bunyan": "^1.8.15",
		"cli-highlight": "^2.1.11",
		"ink": "^4.1.0",
		"ink-spinner": "^5.0.0",
		"keypress": "^0.2.1",
		"meow": "^11.0.0",
		"openai": "^3.2.1",
		"re2": "^1.18.0",
		"react": "^18.2.0",
		"ulid": "^2.3.0",
		"url-regex-safe": "^3.0.0",
		"zustand": "^4.3.7"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@trivago/prettier-plugin-sort-imports": "^4.1.1",
		"@types/bunyan": "^1.8.8",
		"@types/react": "^18.0.32",
		"@types/url-regex-safe": "^1.0.0",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.2.0",
		"chalk": "^5.2.0",
		"concurrently": "^8.0.1",
		"eslint": "^8.39.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.6",
		"typescript": "^5.0.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config"
}
